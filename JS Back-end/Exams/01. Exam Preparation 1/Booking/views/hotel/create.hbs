<section id="viewAddhotel">
    <h2>Add new hotel</h2>
    <form action="/hotels/create" method="POST" id="formAddhotel">
        <label for="hotel">Hotel name:</label>
        <input type="text" id="hotel" name="name" placeholder="Hotel name" value="{{hotelData.name}}">
        <label for="city">City:</label>
        <input type="text" id="city" name="city" placeholder="City" value="{{hotelData.city}}">
        <label for="free-rooms">Free rooms:</label>
        <input type="number" id="free-rooms" name="rooms" placeholder="Free rooms" value="{{hotelData.rooms}}">
        <label for="imgUrl">Image:</label>
        <input type="text" id="imgUrl" name="imageUrl" placeholder="https://" value="{{hotelData.imageUrl}}">

        <input type="submit" class="create" value="Add">
    </form>
</section>